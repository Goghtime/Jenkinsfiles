pipeline {
    agent {
        label 'ansible'
    }

    stages {        
        stage('Git Checkout') {
            steps {
                script {
                    git branch: 'main',
                        credentialsId: 'GLA',
                        url: 'git@github.com:Goghtime/ansible.git'
                }
            }
        }
    
        stage('Print Workspace Path') {
            steps {
                sh "pwd"
                sh "ls -l"
            }
        }
        
        stage('Run Ansible Playbook') {
            steps {
                withCredentials([string(credentialsId: 'ANSIBLE_SUDO_PASSWORD', variable: 'ANSIBLE_SUDO_PASSWORD')]) {
                    sh "ansible-playbook -i hosts Deploy/PROD-NGINX01.yml -K --extra-vars 'ansible_become_pass=${ANSIBLE_SUDO_PASSWORD}'"
                }
            }
        }
    }
}
