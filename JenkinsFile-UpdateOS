pipeline {
    agent {
        label 'ansible'
    }

    stages {        
        stage('Git Checkout') {
            steps {
                script {
                    git branch: 'main',
                        credentialsId: 'Goghlabs-git',
                        url: 'git@github.com:Goghtime/Lab.git'
                }
            }
        }
    
        // testing what working path
        stage('Print Workspace Path') {
            steps {
                sh "pwd"
                sh "ls -l"
            }
        }
        
        stage('Run Ansible Playbook') {
            steps {
                // Your Ansible playbook execution step goes here
                sh "ansible-playbook -i hosts dnsmasq/update-dnsmasq-conf.yml"
            }
        }
    }
}
