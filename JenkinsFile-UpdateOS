pipeline {
    agent {
        label 'ansible'
    }

    stages {        
        stage('Git Checkout') {
            steps {
                script {
                    git branch: 'main',
                        credentialsId: 'git',
                        url: 'git@github.com:Goghtime/Lab.git'
                }
            }
        }
    

        stage('Run Ansible Playbook') {
            steps {
                // Your Ansible playbook execution step goes here
                sh "ansible-playbook -i /hosts /dnsmasq/update-dnsnasq-conf.yml"
            }
        }
    }
}
